# ─── App ────────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=5000

# ─── Database (PostgreSQL) ───────────────────────────────────────────────────────
DATABASE_URL=postgresql://USER:4321D@HOST:5432/videos

# ─── JWT ────────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=your_very_long_and_secure_access_secret_here
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_here

# ─── Storage Mode (local for dev, ftp for production/InterServer) ──────────────
STORAGE_MODE=local
PUBLIC_BASE_URL=http://localhost:5000

# ─── InterServer FTP (only needed when STORAGE_MODE=ftp) ──────────────────────
FTP_HOST=ftp.yourdomain.com
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_PORT=21
FTP_SECURE=false
FTP_UPLOAD_BASE_PATH=/public_html

# ─── Admin Route Secret (hidden login path) ──────────────────────────────────────
# Admin login will be accessible at: /api/v1/<ADMIN_ROUTE_SECRET>/auth/login
ADMIN_ROUTE_SECRET=your-secret-admin-path-segment

# ─── CORS ───────────────────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000
