generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  SUPER_ADMIN
  MINI_ADMIN
  USER
}

enum PublishStatus {
  DRAFT
  PUBLISHED
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole @default(MINI_ADMIN)
  isBlocked Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  videos Video[]
}

model Video {
  id           String        @id @default(cuid())
  title        String
  slug         String        @unique
  category     String?
  tags         String[]
  videoUrl     String
  thumbnailUrl String?
  status       PublishStatus @default(DRAFT)
  uploadedBy   String
  views        Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user User @relation(fields: [uploadedBy], references: [id])

  @@index([status])
  @@index([category])
  @@index([createdAt])
  @@index([tags])
}
